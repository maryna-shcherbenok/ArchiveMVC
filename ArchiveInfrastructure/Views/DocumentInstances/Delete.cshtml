@model ArchiveDomain.Model.DocumentInstance

@{
    ViewData["Title"] = "Видалення екземпляра документа";
}

<h1>Видалення екземпляра документа</h1>

<div>
    <h4>Ви впевнені, що хочете видалити цей екземпляр?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.InventoryNumber)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.InventoryNumber)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.State)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.State)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Available)</dt>
        <dd class="col-sm-9">@(Model.Available ? "Доступний" : "Не доступний")</dd>

        <dt class="col-sm-3">Документ</dt>
        <dd class="col-sm-9">@(Model.Document != null ? Model.Document.Title : "Документ не знайдено.")</dd>
    </dl>

    @if (ViewData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
    }

    <form asp-action="Delete" onsubmit="return confirm('Ви дійсно хочете видалити цей екземпляр документа?');">
        <input type="hidden" asp-for="Id" />

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Видалити</button>
            <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
        </div>
    </form>
</div>
