@model ArchiveDomain.Model.DocumentInstance

@{
    ViewData["Title"] = "Редагувати екземпляр документа";
}

<h1 class="mb-4 text-center">Редагувати екземпляр документа</h1>

<div class="bg-white blur-box p-4 rounded shadow col-md-6 mx-auto">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="DocumentId" />

        <div class="mb-3">
            <label asp-for="State" class="form-label">Стан</label>
            <input asp-for="State" class="form-control" placeholder="Наприклад: Новий, Пошкоджений, Втрата" />
            <span asp-validation-for="State" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input class="form-check-input" asp-for="Available" />
            <label class="form-check-label" asp-for="Available">Доступний</label>
        </div>

        <div class="d-flex gap-2 justify-content-center">
            <button type="submit" class="btn btn-outline-danger btn-animated">Зберегти</button>
            <a asp-action="Index" class="btn btn-outline-primary btn-animated">Скасувати</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
