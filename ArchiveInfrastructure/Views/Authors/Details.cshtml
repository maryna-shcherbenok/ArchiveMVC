@model ArchiveDomain.Model.Author

@{
    ViewData["Title"] = "Деталі автора";
}

<h1>Деталі автора</h1>

<div>
    <h4>Автор</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>

<h3>Документи цього автора</h3>
@if (Model.AuthorDocuments != null && Model.AuthorDocuments.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Назва</th>
                <th>Дата публікації</th>
                <th>Мова</th>
                <th>Кількість примірників</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var authorDoc in Model.AuthorDocuments)
            {
                <tr>
                    <td>@authorDoc.Document.Title</td>
                    <td>
                        @(DateTime.TryParse(authorDoc.Document.PublicationDate, out DateTime pubDate)
                            ? pubDate.ToString("dd.MM.yyyy")
                            : authorDoc.Document.PublicationDate)
                    </td>
                    <td>@authorDoc.Document.Language</td>
                    <td>@authorDoc.Document.Quantity</td>
                    <td>
                        <a asp-action="Details" asp-controller="Documents" asp-route-id="@authorDoc.Document.Id" class="btn btn-info btn-sm">
                            Переглянути
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Цей автор не має документів.</p>
}

<!-- Кнопка для додавання документа -->
<div class="mt-3">
    <a asp-action="Create" asp-controller="Documents" asp-route-authorId="@Model.Id" class="btn btn-primary">
        Додати новий документ
    </a>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Редагувати</a>
    <a asp-action="Index" class="btn btn-secondary">Повернутися до списку</a>
</div>

