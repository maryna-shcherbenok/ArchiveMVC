@model ArchiveDomain.Model.Reservation

@{
    ViewData["Title"] = "Деталі бронювання";
}

<h1>Деталі бронювання</h1>

<div>
    <h4>Користувач: @Model.User.FirstName @Model.User.LastName</h4>
    <dl class="row">
        <dt class="col-sm-4">ReaderCardNumber:</dt>
        <dd class="col-sm-8">@Model.User.ReaderCardNumber</dd>

        <dt class="col-sm-4">Email:</dt>
        <dd class="col-sm-8">@Model.User.Email</dd>

        <dt class="col-sm-4">Телефон:</dt>
        <dd class="col-sm-8">@Model.User.PhoneNumber</dd>

        <dt class="col-sm-4">Дата початку:</dt>
        <dd class="col-sm-8">@Model.ReservationStartDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-4">Дата завершення:</dt>
        <dd class="col-sm-8">
            @(Model.ReservationEndDate.HasValue ? Model.ReservationEndDate.Value.ToString("yyyy-MM-dd") : "Не вказано")
        </dd>
    </dl>

    <h5>Зарезервовані екземпляри документів:</h5>
    <ul>
        @foreach (var rd in Model.ReservationDocuments)
        {
            <li>Інвентарний номер: @rd.DocumentInstance.InventoryNumber</li>
        }
    </ul>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Редагувати</a>
    <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
</div>
