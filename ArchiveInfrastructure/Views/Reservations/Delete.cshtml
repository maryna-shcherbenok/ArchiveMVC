@model ArchiveDomain.Model.Reservation

@{
    ViewData["Title"] = "Деталі бронювання";
}

<h1 class="mb-4 text-center">Деталі бронювання</h1>

<div class="bg-white blur-box p-4 rounded shadow mb-4">
    <dl class="row">
        <dt class="col-sm-3">Користувач:</dt>
        <dd class="col-sm-9">
            @(ViewBag.UsersDict != null && ViewBag.UsersDict.ContainsKey(Model.UserId)
                ? ViewBag.UsersDict[Model.UserId]
                : Model.UserId)
        </dd>

        <dt class="col-sm-3">Початок бронювання:</dt>
        <dd class="col-sm-9">@Model.ReservationStartDateTime.ToString("dd.MM.yyyy HH:mm")</dd>

        <dt class="col-sm-3">Завершення бронювання:</dt>
        <dd class="col-sm-9">@Model.ReservationEndDateTime?.ToString("dd.MM.yyyy HH:mm")</dd>
    </dl>
</div>

@if (Model.ReservationDocuments != null && Model.ReservationDocuments.Any())
{
    <div class="bg-white blur-box p-4 rounded shadow mb-4">
        <h5>Документи:</h5>
        <ul class="mb-0">
            @foreach (var doc in Model.ReservationDocuments)
            {
                <li>
                    @doc.DocumentInstance?.Document?.Title
                    (інв. № @doc.DocumentInstance?.InventoryNumber)
                </li>
            }
        </ul>
    </div>
}

<div class="d-flex justify-content-center gap-3 mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-danger btn-animated">Редагувати</a>
    <a asp-action="Index" class="btn btn-outline-primary btn-animated">Назад до списку</a>
</div>

