@model ArchiveDomain.Model.Document

@{
    ViewData["Title"] = "Видалити документ";
}

<h1 class="mb-4 text-center">Видалення документа</h1>

<div class="bg-white blur-box p-4 rounded shadow">
    <h4 class="mb-3 text-danger">Ви впевнені, що хочете видалити цей документ?</h4>

    @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
    {
        <div class="alert alert-danger">
            @ViewData["ErrorMessage"]
        </div>
    }

    <dl class="row">
        <dt class="col-sm-4">Назва:</dt>
        <dd class="col-sm-8">@Model.Title</dd>

        <dt class="col-sm-4">Дата публікації:</dt>
        <dd class="col-sm-8">@Model.PublicationDate</dd>

        <dt class="col-sm-4">Мова документа:</dt>
        <dd class="col-sm-8">@Model.Language</dd>

        <dt class="col-sm-4">Кількість екземплярів:</dt>
        <dd class="col-sm-8">@Model.Quantity</dd>

        @if (!string.IsNullOrWhiteSpace(Model.Info))
        {
            <dt class="col-sm-4">Опис:</dt>
            <dd class="col-sm-8 fst-italic">@Model.Info</dd>
        }

        @if (Model.Type != null)
        {
            <dt class="col-sm-4">Тип документа:</dt>
            <dd class="col-sm-8">@Model.Type.Name</dd>
        }
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex gap-3 mt-4">
            <button type="submit" class="btn btn-outline-danger btn-animated">Так, видалити</button>
            <a asp-action="Index" class="btn btn-outline-primary btn-animated">Скасувати</a>
        </div>
    </form>
</div>
