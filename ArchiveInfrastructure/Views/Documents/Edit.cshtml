@model ArchiveDomain.Model.Document

@{
    ViewData["Title"] = "Редагувати документ";
}

<h1>Редагувати документ</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Title" class="control-label">Назва документа</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PublicationDate" class="control-label">Дата публікації документа</label>
                <input asp-for="PublicationDate" class="form-control" />
                <span asp-validation-for="PublicationDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Language" class="control-label">Мова документа</label>
                <input asp-for="Language" class="form-control" />
                <span asp-validation-for="Language" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Info" class="control-label">Інформація про документ</label>
                <textarea asp-for="Info" class="form-control"></textarea>
                <span asp-validation-for="Info" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TypeId" class="control-label">Тип документа</label>
                <select asp-for="TypeId" class="form-control" asp-items="ViewBag.TypeList"></select>
                <span asp-validation-for="TypeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="authorIds" class="control-label">Автори документа</label>
                <select name="authorIds" class="form-control" multiple="multiple" asp-items="ViewBag.AuthorList"></select>
            </div>

            <div class="form-group">
                <label for="categoryIds" class="control-label">Категорії документа</label>
                <select name="categoryIds" class="form-control" multiple="multiple" asp-items="ViewBag.CategoryList"></select>
            </div>

            <input type="hidden" asp-for="Id" />
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Зберегти</button>
                <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />

    <script>
        $(document).ready(function() {
            $("#authorSelect, #categorySelect").select2({
                placeholder: "Оберіть значення",
                allowClear: true,
                width: "100%"
            });
        });
    </script>

}
